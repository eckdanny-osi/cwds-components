{
  "name": "cwds-components",
  "version": "1.0.0",
  "description": "React components for CWDS",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "build:copy": "mkdir -p dist && cp -R node_modules/font-awesome/fonts dist/fonts",
    "build:ts": "tsc --project src",
    "watch:ts": "npm run build:ts -- --watch",
    "build:css": "node-sass --output dist --source-map true --source-map-contents --include-path node_modules src",
    "watch:css": "npm run build:css && npm run build:css -- --watch --recursive",
    "start": "npm-run-all clean build:copy --parallel watch:*"
  },
  "author": "Danny Eck <danny.eck@osi.ca.gov>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.22",
    "bootstrap": "4.0.0-beta.2",
    "font-awesome": "^4.7.0",
    "node-sass": "4.5.3",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.0",
    "rimraf": "^2.6.2",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "peerDependencies": {
    "react": "^16.1.0",
    "react-dom": "^16.1.0"
  },
  "dependencies": {
    "@types/react-fontawesome": "^1.6.1",
    "classnames": "^2.2.5",
    "react-fontawesome": "^1.6.1"
  }
}
